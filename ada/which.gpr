project Which is

   for Source_Dirs use ("src/**");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("which.adb"); --   <<<<

   package Builder is
      for Executable ("which.adb") use "which-ada";
      for Global_Compilation_Switches ("ada") use ("-O2", "-g");
   end Builder;

   for Runtime ("ada") use "default";

end Which;

